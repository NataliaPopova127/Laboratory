<Page x:Class="LabolatoryApp.View.Pages.TakeBiomaterialPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LabolatoryApp.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TakeBiomaterialPage">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Код пробирки: " />
            <TextBox x:Name="tbCodeMaterial"/>
            <TextBlock Text="Фамилия пациента: " />
            <TextBox x:Name="tbSurnamePatient"/>
            <TextBlock Text="Имя пациента: " />
            <TextBox x:Name="tbNamePatient"/>
            <TextBlock Text="Отчество пациента (если есть): " />
            <TextBox x:Name="tbLastnamePatient"/>
            <Button Content="Сформировать заказ" x:Name="btnMakeOrder" Click="btnMakeOrder_Click"/>
        </StackPanel>
    </Grid>
</Page>
