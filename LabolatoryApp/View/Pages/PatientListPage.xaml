<Page x:Class="LabolatoryApp.View.Pages.PatientListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LabolatoryApp.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PatientListPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <TextBlock Text="Найти: " VerticalAlignment="Center"/>
            <TextBox x:Name="tbFindString" Width="200" Height="30" TextChanged="tbFindString_TextChanged"/>
        </StackPanel>

        <ListView x:Name="lvPatient" Grid.Row="1"/>
    </Grid>
</Page>
